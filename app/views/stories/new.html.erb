<h1 class="text-info">Creating a Story</h1>
<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= render 'shared/errors' %>
	<%= form_for @story do |f| %>

	  <%= f.label :body %>
	  <%= f.text_area :body, class: 'form-control' %>

	  <%= f.submit "Create story", class: 'btn btn-info' %>
	<% end %>
  </div>
</div>
