<div class="panel panel-default my-box">
  <li>
	<div class="panel panel-info">
	  <div class="panel-heading">
		<span class="glyphicon glyphicon-time"></span> Story created <%= distance_of_time_in_words(Time.now, story.created_at) %> ago
	  </div>
	  <div class="panel-body">
		<p class="story-body"><%= story.body %></p>
	  </div>
	  <div class="panel-footer">
		<p class="text-muted">
		  <% if logged_in? %>
			<p class="text-muted member-name">
			  <span class="glyphicon glyphicon-star"></span> Author: <%= Member.find(story.member_id).name %>
		  </p>
		<% else %>
		  <p class="text-danger"><small>You need to be logged in to view the author of this story</small></p>
		<% end %>
	  </p>
	</div>
  </div>
</li>
</div>
